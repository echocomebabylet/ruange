.designer-list{
	width: 100%;
	border-top: 1rpx solid #F7F7F7;
	border-bottom: 1rpx solid #F7F7F7;
	padding: 24rpx 0 24rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-top: 20rpx;
}
.designer-more{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 20rpx;
	color: #8e8e8e;
	width: 100%;
	padding-right: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.designer-more image{
	width: 15rpx;
	height: 20rpx;
	margin-left: 15rpx;
}
/* 推荐设计师轮播 */
.swiper2{
	height: 350rpx;
	width: 100%;
	margin-top: 20rpx;
}
.swiper2 swiper-item{
	width: 100%;
}
.swiper2 swiper-item view{
	height: 340rpx;
	border: 2rpx solid #e7e7e7;
	border-radius: 15rpx;
}
.swiper2 swiper-item image{
	width: 110rpx;
	height: 110rpx;
	display: block;
	margin: 20rpx auto;
}
.swiper2 .name{
	font-size: 20rpx;
	font-weight: bold;
	display: block;
	text-align: center;
}
.swiper2 .sign{
	font-size: 22rpx;
	color: #a6a6a6;
	margin: 20rpx auto;
	text-align: center;
	display: block;
}
.swiper2 .follow{
	display: block;
	width: 80%;
	margin: auto;
	text-align: center;
	line-height: 65rpx;
	height: 65rpx;
	font-weight: bold;
	font-size: 24rpx;
	color: #47cccc;
	background-color: #f0fcfc;
	border-radius: 20rpx;
}
/* 关注列表 */
.follow-list{
	padding: 30rpx 50rpx 30rpx 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx solid #F7F7F7;
}
.follow-list:last-child{
	border: none;
}
.desginer-tit{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.desginer-tit .head{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.desginer-tit image{
	width: 75rpx;
	height: 75rpx;
	margin-right: 20rpx;
}
.desginer-tit text{
	display: block;
}
.designer-name{
	font-size: 24rpx;
	font-weight: bold;
}
.time{
	font-size: 22rpx;
	color: #b8b8b8;
	margin-top: 15rpx;
}
.followed{
	width: 150rpx;
	height: 55rpx;
	line-height: 55rpx;
	text-align: center;
	font-size: 26rpx;
	font-weight: bold;
	color: #47cccc;
	background-color: #f0fcfc;
}
.follow-list .intro{
	display: block;
	width: 70%;
	font-size: 24rpx;
	font-weight: bold;
	margin: 25rpx 0 40rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.select image{
	width: 28rpx;
	height: 28rpx;
	margin-right: 20rpx;
}
.select{
	font-size: 20rpx;
	color: #5c5c5c;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.select view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}


