/* 体验家列表 */
.home-list{
	background-color: white;
	margin-bottom: 15rpx;
	padding-top: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.location{
	position: relative;
}
.location image{
	width: 100%;
	height: 380rpx;
}
.location view{
	/* width: 300upx; */
	height: 60rpx;
	background-color: rgba(225,225,225,0.8);
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 20rpx;
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	padding: 0 15rpx;
	border-radius: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.location text{
	margin-left: 5rpx;
}
.intro{
	padding: 35rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx solid #F7F7F7;
}
.info{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding-bottom: 25rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx dashed #F7F7F7;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.info image{
	width: 80rpx;
	height: 80rpx;
}
.info text{
	display: block;
	line-height: 47rpx;
	font-weight: bold;
	font-size: 27rpx;
}
.detail{
	padding: 25rpx 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx dashed #F7F7F7;
}
.tab{
	display: block;
	width: 120rpx;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	font-size: 20rpx;
	color: #47cccc;
	background-color: #f0fcfc;
}
.tab-tit{
	width: 80%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	font-size: 30rpx;
}
.tab-cont{
	position: relative;
	padding-top: 20rpx;
	margin-top: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.tab-intro{
	font-size: 24rpx;
	line-height: 34rpx;
	width: 100%;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis; 
	display: -webkit-box;
	-webkit-line-clamp: 3;
	line-clamp: 3; 
	-webkit-box-orient: vertical;
}
.tab-cont image{
	width: 24rpx;
	height: 24rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.check{
	font-size: 25rpx;
	color: #6282af;
	display: block;
	margin-top: 15rpx;
	font-weight: bold;
}
.order{
	padding: 30rpx 0 0 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 23rpx;
	font-weight: bold;
}
.order view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.order image{
	width: 26rpx;
	height: 26rpx;
	margin-right: 20rpx;
}
.thank{
	width: 70%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	display: block;
	color: #b0b0b0;
}
.select1{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.select1 view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 25rpx;
	font-weight: bold;
	margin: 30rpx 0;
}
.select1 image{
	width: 30rpx;
	height: 30rpx;
	margin-right: 20rpx;
}

