	padding: 40rpx 30rpx 0 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.local .num{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
