
.category{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.menu-list{
	width: 25%;
	height: 1000rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #f7f7f7;
	border-right: 1rpx solid #F7F7F7;
}
.menu-list text{
	font-size: 26rpx;
	display: block;
	color: #717171;
	text-align: center;
	font-weight: bold;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	height: 120rpx;
	line-height: 120rpx;
}
.menu-list .active1{
	color: black;
    font-weight: bold;	
	position: relative;
	background-color: white;
}
.menu-list .active1::before{
	content: '';
	width: 10rpx;
	height: 50%;
	background-color: #40CCCB;
	position: absolute;
	top: 50%;
	left: 0;
	border-radius: 0 6rpx 6rpx 0;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.menu-cont{
	width: 75%;
	padding: 40rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	height: 1000rpx;
}
.kind-ad{
	width: 100%;
	height: 210rpx;
}
.kind-list{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.kind-list view{
	margin-bottom: 60rpx;
	width: 49%;
	text-align: center;
	font-size: 25rpx;
}
.kind-list image{
	width: 140rpx;
	height: 170rpx;
	display: block;
	margin: 44rpx auto;
}

