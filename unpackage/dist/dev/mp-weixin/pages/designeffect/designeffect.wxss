
.cont .bg{
	position: absolute;
	width: 100%;
	height: 100%;
}
.content{
	position: absolute;
	width: 100%;
	height: 100%;
	padding: 35rpx 25rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.scene{
	position: fixed;
	top: 0;
	right: 0;
	width: 0;
	height: 100%;
	background-color: white;
	-webkit-transition: width 0.2s;
	transition: width 0.2s;
}
.active{
	position: relative;
}
.active::before{
	content: '';
	width: 5rpx;
	height: 100%;
	background-color: #40CCCB;
	position: absolute;
	top: 0;
	left: 0;
}
.active1{
	border: 4rpx solid #40CCCB;
}
.sceneactive{
	width: 40%;
	-webkit-transition: width 0.2s;
	transition: width 0.2s;
}
.product{
	position: fixed;
	top: 0;
	right: 0;
	width: 0;
	height: 100%;
	background-color: white;
	-webkit-transition: width 0.2s;
	transition: width 0.2s;
}
.productactive{
	width: 35%;
	-webkit-transition: width 0.2s;
	transition: width 0.2s;
}
.select{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 0;
	background-color: white;
	-webkit-transition: height 0.2s;
	transition: height 0.2s; 
	display: -webkit-box; 
	display: -webkit-flex; 
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	overflow: hidden;
}
.selectactive{
	height: 20%;
	-webkit-transition: height 0.2s;
	transition: height 0.2s;
}

