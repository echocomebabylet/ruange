page{
	background-color: #F2F2F2;
	padding-top: 220rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.nav{
	padding: 0 45rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 30rpx;
	height: 130rpx;
	background-color: white;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 1000;
}
.nav image{
	width: 24rpx;
	height: 38rpx;
}
.coupon-nav{
	width: 100%;
	padding: 30rpx 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 28rpx;
	font-weight: bold;
	background-color: white;
	position: fixed;
	top: 130rpx;
	left: 0;
	z-index: 1000;
}
.active{
	position: relative;
}
.active::before{
	content: '';
	width: 50rpx;
	height: 5rpx;
	background-color: black;
	position: absolute;
	bottom: -30rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
/* 未使用 */
.disuse,.used{
	padding: 20rpx 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: white;
	margin-top: 20rpx;
}
.exchange{
	width: 100%;
	padding: 20rpx 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border: 2rpx solid #dddddd;
	background-color: #f8f8f8;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.exchange input{
	font-size: 30rpx;
}
.exchange view,
.useing{
	width: 120rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	color: white;
	background-color: black;
	font-size: 22rpx;
}
.coupon{
	width: 100%;
	padding: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border: 2rpx solid #dddddd;
	margin-top: 20rpx;
	position: relative;
}
.disable{
	padding: 20rpx 0 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-top: 40rpx;
	border-top: 2rpx solid #dddddd;
	font-size: 24rpx;
	color: #a4a4a4;
}
/* 已使用 */
.used{
	color: #c5c5c5;
}
.used-img{
	width: 112rpx;
	height: 112rpx;
	position: absolute;
	top: 50%;
	right: 40rpx;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}

