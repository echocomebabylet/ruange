
.nav{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 50rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 35rpx;
	font-weight: bold;
}
.nav image{
	width: 45rpx;
	height: 45rpx;
	margin-right: 20rpx;
}
.tel{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 28rpx;
	font-weight: bold;
	color: #b1b1b1;
	width: 90%;
	margin: auto;
	padding-bottom: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx solid #F7F7F7;
	margin-top: 150rpx;
}
.tel input{
	width: 80%;
	margin-left: 20rpx;	
	font-size: 28rpx;
	font-weight: normal;
	outline: none;
	border: none;
}
.code{
	width: 90%;
	margin: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-top: 40rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.code view{
	padding: 40rpx 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width: 50%;
}
.code input{
	width: 100%;
	margin-left: 20rpx;	
	font-size: 28rpx;
}
.code text{
	display: block;
	width: 40%;
	height: 110rpx;
	line-height: 110rpx;
	font-size: 29rpx;
	text-align: center;
	border-radius: 10rpx;
	color: white;
	background-color: #40CCCB;
}
.btn{
	width: 90%;
	margin: auto;
	margin-top: 80rpx;
	height: 110rpx;
	line-height: 110rpx;
	font-size: 29rpx;
	text-align: center;
	border-radius: 10rpx;
	color: white;
	background-color: #40CCCB;
}

