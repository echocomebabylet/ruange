
.nav{
	padding: 0 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 30rpx;
	height: 130rpx;
	background-color: white;
}
.nav image{
	width: 24rpx;
	height: 38rpx;
}
.info{
	padding: 50rpx 30rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 28rpx;
}
.info image{
	width: 50rpx;
	height: 44rpx;
}
.img{
	width: 120rpx;
	height: 120rpx;
	border-radius: 20rpx;
	position: absolute;
	bottom: -40rpx;
	left: 30rpx;
}
.wait{
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0.5);
	position: fixed;
	top: 0;
	left: 0;
}
.cont{
	width: 70%;
	background-color: white;
	border-radius: 20rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translateX(-50%) translateY(-50%);
	        transform: translateX(-50%) translateY(-50%);
	font-size: 28rpx;
}

